<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @entry.title %>
</p>

<p>
  <strong>Isbn:</strong>
  <%= @entry.isbn %>
</p>

<h2>Comments</h2>

<p>
  <strong>Notes:</strong>
  <%= @entry.notes %>
</p>

<p>
  <strong>User:</strong>
  <%= @entry.user_id %>
</p>

<h2>Comments</h2>
<% @entry.comments.each do |comment| %>
<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<% end %>

<h2>Add a comment:</h2>


<%= form_for([@entry,@entry.comments.build]) do |f| %>

<p>
  <%= f.label :commenter %><br/>
  <%= f.text_field :commenter  %>
</p>

<p>
  <%= f.label :body %><br/>
  <%= f.text_area :body  %>
</p>

<p>
  <%= f.submit%>
</p>

<%end%>

<%= link_to 'Edit', edit_entry_path(@entry) %> |
<%= link_to 'Back', entries_path %>
